<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.kwang0.customtoast.view.CustomToastView
        android:id="@+id/customToast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:alpha="0.0"
        android:background="@drawable/bg_custom_toast"
        android:padding="8dp"
        android:textColor="@android:color/white"
        android:visibility="gone"
        tools:text="111"
        tools:visibility="visible" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonSystemShortToast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="16dp"
            android:tag="@string/tag_short_toast"
            android:text="SHOW SYSTEM SHORT TOAST" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonSystemLongToast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="16dp"
            android:tag="@string/tag_long_toast"
            android:text="SHOW SYSTEM LONG TOAST" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonCustomToast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="16dp"
            android:text="SHOW CUSTOM TOAST" />

    </LinearLayout>

</FrameLayout>